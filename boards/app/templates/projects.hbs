

{{#link-to "projects.new" class="ui teal button"}}Ajouter un projet...{{/link-to}}

<table class="ui bottom attached table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Descriptif</th>
    <th>StartDate</th>
    <th>DueDate</th>
    <th>Owner</th>
    <th></th>
  </tr>
  </thead>
  <tbody>

  {{#each model as |project|}}
    <tr>
      <td>{{project.name}}</td>
      <td>{{project.descriptif}}</td>
      <td>{{moment-format project.startDate 'DD-MM-YYYY'}}</td>
      <td>{{moment-format project.dueDate 'DD-MM-YYYY'}}</td>
      <td>{{project.owner.identity}}</td>
      <td>
        {{#link-to "projects.edit" project class="ui basic circular icon button"}}
          <i class="ui edit grey icon"></i>
        {{/link-to}}

        {{#link-to "projects.delete" project class="ui basic circular icon button"}}
          <i class="ui times red icon"></i>
        {{/link-to}}
      </td>
    </tr>
  {{/each}}

  </tbody>
</table>

{{outlet}}